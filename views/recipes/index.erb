<h1>Recipe Box</h1>


<ul>
  <%@recipes.each do |recipe| %>
  <li><a href='/recipes/<%=recipe['id']%>'><%=recipe['name']%></a></li>
  <%end%>
</ul>


<p>
  <%if @page_number != 1%>
  <a href ='/recipes?page=<%=@page_number -1%>'>Previous | </a>
  <%end%>
  <%if @page_number <= @number_of_pages%>
  <a href ='/recipes?page=<%=@page_number + 1%>'>Next</a>
  <%end%>

</p>
